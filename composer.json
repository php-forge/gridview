{
    "name": "forge/gridview",
    "type": "library",
    "description": "GridView for Yii3",
    "keywords": [
        "yii",
        "gridview"
    ],
    "license": "BSD-3-Clause",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "ext-json": "*",
        "php": "^8.0",
        "forge/html-widgets": "^1.0@dev",
        "forge/html": "*",
        "forge/widget": "^1.0@dev",
        "yiisoft/arrays": "^2.0",
        "yiisoft/data": "^3.0@dev",
        "yiisoft/json": "^1.0",
        "yiisoft/router": "^1.0",
        "yiisoft/translator-formatter-simple": "^1.0",
        "yiisoft/translator-message-php": "^1.0",
        "yiisoft/view": "^6.0"
    },
    "require-dev": {
        "nyholm/psr7": "^1.3",
        "phpunit/phpunit": "^9.5",
        "roave/infection-static-analysis-plugin": "^1.7",
        "vimeo/psalm": "^4.5",
        "yiisoft/aliases": "^2.0",
        "yiisoft/event-dispatcher": "^1.0",
        "yiisoft/router-fastroute": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Forge\\GridView\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Forge\\GridView\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        },
        "config-plugin-options": {
            "source-directory": "config"
        },
        "config-plugin": {
            "params": "params.php",
            "web": [
                "web/*.php"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
